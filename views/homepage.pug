doctype html
html
  head
    title #{title}
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    style.
      body {
        font-family: Arial, sans-serif;
        background: #111;
        color: #fff;
        padding: 20px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        border: 1px solid #333;
        padding: 10px;
        text-align: left;
      }
      th {
        background: #222;
      }
      a {
        color: #4da6ff;
        text-decoration: none;
        font-weight: bold;
      }

  body
    h1 My Custom Objects
    a(href="/update-cobj") + Add New Record

    if data.length === 0
      p No records found.
    else
      table
        thead
          tr
            th ID
            th Name
            th Type
            th Avg Price
        tbody
          each item in data
            tr
              td #{item.id}
              td #{item.name}
              td #{item.type}
              td #{item.avg_price}
