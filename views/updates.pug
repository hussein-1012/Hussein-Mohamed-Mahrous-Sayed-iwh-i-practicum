doctype html
html
  head
    title #{title}
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    style.
      body {
        font-family: Arial, sans-serif;
        background: #111;
        color: #fff;
        padding: 20px;
      }
      form {
        max-width: 400px;
      }
      input, button {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        background: #222;
        border: 1px solid #333;
        color: #fff;
      }
      button {
        cursor: pointer;
        background: #4da6ff;
        border: none;
        font-weight: bold;
      }
      a {
        color: #4da6ff;
        text-decoration: none;
      }

  body
    h1 Add Custom Object

    form(method="POST", action="/update-cobj")
      input(
        type="text",
        name="name",
        placeholder="Name",
        required
      )

      input(
        type="text",
        name="type",
        placeholder="Type",
        required
      )

      input(
        type="number",
        name="avg_price",
        placeholder="Average Price",
        required
      )

      button(type="submit") Save

    br
    a(href="/") ‚Üê Back to Home
